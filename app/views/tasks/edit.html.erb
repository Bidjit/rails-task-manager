<div class="container">
  <h1>Edit task</h1>
  <%= form_for(@task) do |f| %>
    <div class="form-group">
      <%= f.label :title, "Task name" %>
      <%= f.text_field :title, class: 'form-control', value: @task.title %>
    </div>
    <div class="form-group">
      <%= f.label :details, "Task details" %>
      <%= f.text_area :details, class: 'form-control', value: @task.details, rows: "3" %>
    </div>
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
  <hr>
  <%= link_to "Back to list", tasks_path %>
</div>
