<div class="container">
  <h1><%= @task.title %></h1>
  <div class="details">
    <%= @task.details %>
  </div>
  <% if @task.completed %>
    <p>
      <input class="checkbox"  type="checkbox" checked> This task is completed
    </p>
  <% else %>
      <input class="checkbox"  type="checkbox"> This task is not completed!
  <% end %>
  <hr>
  <%= link_to "Edit this task", edit_task_path %>
  <hr>
  <%= link_to "Back to list", tasks_path %>

</div>
